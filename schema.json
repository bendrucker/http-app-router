{
  "title": "App",
  "description": "An definition for http-app-router",
  "type": "object",
  "required": [
    "name",
    "routes",
    "host"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application."
    },
    "description": {
      "type": "string",
      "description": "A description of the application."
    },
    "routes": {
      "oneOf": [
        {
          "type": "array",
          "description": "The routes the application handles.",
          "items": {
            "type": "string",
            "minItems": 1,
            "uniqueItems": true
          }
        },
        {
          "type": "string",
          "enum": [
            "*"
          ]
        }
      ]
    },
    "host": {
      "type": "string",
      "description": "The application's host where it serves HTTPS requests",
      "format": "host-name"
    },
    "headers": {
      "type": "object",
      "description": "Headers to set on client requests for the app"
    },
    "transforms": {
      "type": "array",
      "description": "A list of HTML transforms to run in series",
      "items": {
        "type": "string",
        "description": "A transform key"
      }
    }
  },
  "additionalProperties": false
}
